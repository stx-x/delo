{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "main-capability",
  "description": "Capability for the main window",
  "windows": [
    "main"
  ],
  "permissions": [
    {
      "identifier": "opener:allow-open-path",
      "allow": [
        {
          "path": "**/*"
        }
      ]
    },
    {
      "identifier": "fs:scope",
      "allow": [
        {
          "path": "**/*"
        },
        {
          "path": "$HOME/**"
        },
        {
          "path": "$PICTURE/**"
        },
        {
          "path": "$DOWNLOAD/**"
        },
        {
          "path": "$DOCUMENT/**"
        }
      ]
    },
    {
      "identifier": "fs:allow-remove",
      "allow": [
        {
          "path": "**/*"
        }
      ]
    },
    {
      "identifier": "fs:read-dirs",
      "allow": [
        {
          "path": "**/*"
        },
        {
          "path": "$HOME/**"
        },
        {
          "path": "$PICTURE/**"
        },
        {
          "path": "$DOWNLOAD/**"
        },
        {
          "path": "$DOCUMENT/**"
        }
      ]
    },
    {
      "identifier": "fs:read-files",
      "allow": [
        {
          "path": "**/*"
        },
        {
          "path": "$HOME/**"
        },
        {
          "path": "$PICTURE/**"
        },
        {
          "path": "$DOWNLOAD/**"
        },
        {
          "path": "$DOCUMENT/**"
        }
      ]
    },
    "dialog:default"
  ]
}
